    <!-- Question about friends to meet with -->
    
    <category>
        <pattern>^ MI AMIGO</pattern>
        <template>
            <think><set name='topic'>FRIEND</set></think>
            <condition name='hasfriend'>
                   <li value='yes'>
                    <random>
                        <li>¿Estás viendo a tus amigos ultimamente?</li>
                        <li>¿Por que no quedas con tu amigo? Quizas paseis un buen rato.</li>
