<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<!-- In case the coach has no answer -->
    <category>
    <pattern>*</pattern>
    <template>Sorry, i did not understand you.</template>
    </category>
    
    <!-- Start of conversation -->
    <category>
        <pattern>HI ^</pattern>
        <template>Hi,<get name="username"></get>, how are you?</template>
    </category>
    
    <category>
        <pattern>HELLO ^</pattern>
        <template><srai>HI <get name="username"></get></srai></template>
    </category>
    
    <category>
        <pattern>* HOW ARE YOU</pattern>
        <template>I am fine. And you?</template>
    </category>
    
    <category>
        <pattern># FINE ^</pattern>
        <template>Me too. How are feeling today?</template>
    </category>
    
    <category>
        <pattern>* AND YOU</pattern>
        <template><srai><star index = "1"/> FINE <star index = "2"/></srai></template>
    </category>
    
    <category>
            <pattern>* <set>emotions</set> *</pattern>
            <template>I celebrate that you are <star index = "2"/> today. It is important to avoid bad thoughts.</template>
    </category>
    
    <category>
            <pattern>* <set>emotions</set></pattern>
            <template>I celebrate that you are <star index = "2"/> today. It is important to avoid bad thoughts.</template>
    </category>
    
    <category>
            <pattern><set>emotions</set></pattern>
            <template>I celebrate that you are <star/> today. It is important to avoid bad thoughts.</template>
    </category>
    
    <category>
        <pattern>^ YOUR NAME ^</pattern>
        <template>My name is Welky. Your name is <get name="username"></get>, right?</template>
    </category>
    
    <category>
        <pattern>YES</pattern>
        <that>^ YOUR NAME ^</that>
        <template><srai>HI <get name="username"></get></srai></template>
    </category>
    
    <category>
        <pattern>NO</pattern>
        <that>^ YOUR NAME ^</that>
        <template>
            <think><set name='topic'>NAME</set></think>
            What is your name?
        </template>
    </category>
    
    
    <!-- Possible questions to get the name of the user -->
    <topic name='NAME'>
        
        <category>
            <pattern>I AM *</pattern>
            <template>
                <think><set name="username"><star index="1"/></set></think>
                <srai>HI <get name="username"></get></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>
        
        <category>
            <pattern>* NAME IS *</pattern>
            <template>
                <srai>I AM <star index="2"/></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>
        
        <category>
            <pattern>*</pattern>
            <template>
                <srai>I AM <star/></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>
        
    </topic>
    
    
	 <category> 
      <pattern>WELKY</pattern>
      <template> 
        <random> 
          <li>Yes?</li>
          <li>Tell me</li>
        </random>
      </template>
    </category>
    
    
    
    <!-- Body of conversation -->
    <category> 
      <pattern>* DOING NOW ^</pattern>
      <template> 
        <random> 
          <li>I am talking to you.</li>
          <li>I am having a good time talking to you.</li>
        </random>
      </template>
    </category>
    
    <category> 
      <pattern>* SOMETHING ^</pattern>
      <template> 
        <random>
            <li>Tell me about your children.<srai>^ MY CHILDREN</srai></li>
            <li> Tell me about your grandchildren.<srai>^ MY GRANDCHILDREN</srai></li>
            <li> Tell me about your pets.<srai>^ MY PET</srai></li>
            <li> Tell me about your friends.<srai>^ MY FRIEND</srai></li>
            <li> Tell me about your hobbies. <srai>^ MY HOBBIES</srai></li>
        </random>
      </template>
    </category>
    
    <category> 
      <pattern>* TALK ^</pattern>
      <template><srai>* SOMETHING ^</srai></template>
    </category>
    
    <category>
        <pattern>* NEWS ^</pattern>
        <template>
            You can access some news here
            <random>
                <li><link><text>BBC News</text><url>https://www.bbc.com/news</url></link></li>
                <li><link><text>The Sun</text><url>https://www.thesun.co.uk</url></link></li>
                <li><link><text>Daily Mail</text><url>https://www.dailymail.co.uk/home/index.html</url></link></li>
            </random>
        </template>
    </category>
    
    <category>
        <pattern>* BOOKS</pattern>
        <template>Sure, i love reading.
        <think><set name="topic">BOOKS</set></think>
        </template>
    </category>
    
    <topic name="BOOKS">
        
        <category>
            <pattern>ME TOO</pattern>
            <template>And what types of books do you like?</template>
        </category>
        
        <category>
            <pattern>I LOVE READING <set>booktypes</set> ^</pattern>
            <template>Yes, <star/> books are my preferred too.</template>
        </category>
        
        <category>
            <pattern>I LIKE READING <set>booktypes</set> ^</pattern>
            <template>Yes, <star/> books are my preferred too.</template>
        </category>
        
        <category>
            <pattern>* YOU READING ^</pattern>
            <template>I am reading Harry Potter and the Philosopher's Stone.It is a bit old by i love it. And you?</template>
        </category>
        
        <category>
            <pattern>_ AM READING *</pattern>
            <template><star index="2"/> is also a good book</template>
        </category>
        
    </topic>
    
    <!-- End of conversation -->
	<category>
    <pattern>BYE ^</pattern>
    <template> 
      <random>
        <li>Bye.</li>
        <li>See you soon.</li>
		<li>A pleasure to talk to you.</li>
      </random>
    </template>
    </category>
  
    <category>
    <pattern>GOOD BYE ^</pattern>
    <template> <srai>BYE ^</srai>
    </template>
    </category>
    
    <category>
    <pattern>* END THE CONVERSATION</pattern>
    <template> <srai>BYE ^</srai>
    </template>
    </category>
    
</aiml>