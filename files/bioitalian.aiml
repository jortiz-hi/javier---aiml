    <category>
        <that>MA SEI SPOSATO</that>
	    <pattern>$NO ^</pattern>
	    <template>
	        <think><set name="married">no</set></think>
	        E hai qualcuno che ti supporti quotidianamente?
	    </template>
    </category>
    
    <category>
        <that>E HAI QUALCUNO CHE TI SUPPORTI QUOTIDIANAMENTE</that>
	    <pattern>*</pattern>
	    <template>
	        <think><set name='ans1'><star/></set></think>
    	           <condition name='ans1'>
    	               <li value='si'><think><set name='topic'>SUPPORT</set></think>Come si chiama quella persona?</li>
    	               <li value='sì'><think><set name='topic'>SUPPORT</set></think>Come si chiama quella persona?</li>
    	               <li value='no'>Va bene essere indipendenti.</li>
    	               <li>Scusa, non ti ho capito.</li>
    	           </condition>
	    </template>
    </category>
    
    
