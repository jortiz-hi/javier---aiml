<!-- Question about children to start children topic -->
	<category>
	    <pattern>^ I MIEI FIGLI</pattern>
	    <template>
	        Avere bambini? (indica sì o no)
	    </template>
    </category>
    
    <category>
        <that>LPAREN INDICA SÌ O NO RPAREN</that>
	    <pattern>SI ^</pattern>
	    <template>
	        <think><set name='children'>yes</set></think>
	        <think><set name='topic'>CHILDREN</set></think>
	        È fantastico. Quanti figli hai?
	    </template>
    </category>

    <category>
        <that>LPAREN INDICA SÌ O NO RPAREN</that>
        <pattern>SÌ</pattern>
        <template>
            <srai>SI ^</srai>
        </template>
    </category>
    
    <category>
        <that>LPAREN INDICA SÌ O NO RPAREN</that>
        <pattern>NO</pattern>  
	    <!--<pattern>NO</pattern>establece prioridad a la respuesta del <that> para poder añadir ^ que indique más opciones-->
	    <template>
	        <think><set name="children">no</set></think>
	        È fantastico. Ma sei sposato?
	    </template>
    </category>
    
    <category>
        <that>LPAREN INDICA SÌ O NO RPAREN</that>
        <pattern>*</pattern>
        <template>
            Scusa, non ti ho capito. Volevi dire si? (Indica sì o no)   
        </template>
    </category>
    
