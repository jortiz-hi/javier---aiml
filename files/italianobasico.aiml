<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<!-- In case the coach has no answer -->
    <category>
    <pattern>*</pattern>
    <template>Scusa, non ti ho capito.</template>
    </category>
    
    <!-- Start of conversation -->
    <category>
        <pattern>CIAO ^</pattern>
        <template>Ciao,<get name="username"></get>, come stai?</template>
    </category>
    
    <category>
        <pattern>BUONGIORNO ^</pattern>
        <template><srai>Ciao <get name="username"></get></srai></template>
    </category>
    
    <category>
        <pattern>* COME STAI</pattern>
        <template>Sto bene. Come stai?</template>
    </category>
    
    <category>
        <that>* COME STAI ^</that>   
        <pattern>^ BENE ^</pattern>
        <template>Anche io. Come ti senti oggi?</template>
    </category>
    
    <category>
        <pattern>^ E TU</pattern>
        <template><srai><star index = "1"/> BENE <star index = "2"/></srai></template>
    </category>
    
    <category>
            <pattern>* <set>emozioni</set> *</pattern>
            <template>Festeggio che tu stia <star index = "2"/> oggi. È importante evitare cattivi pensieri.</template>
    </category>
    
    <category>
            <pattern>* <set>emozioni</set></pattern>
            <template>Festeggio che tu stia <star index = "2"/> oggi. È importante evitare cattivi pensieri.</template>
    </category>
    
    <category>
            <pattern><set>emozioni</set></pattern>
            <template>Festeggio che tu stia <star/> oggi. È importante evitare cattivi pensieri.</template>
    </category>
    
    <category>
            <pattern>MI CHIAMO *</pattern>
            <template>
                <think><set name="username"><star index="1"/></set></think>
                <srai>Ciao <get name="username"></get></srai>
            </template>
        </category>
    
    <category>
        <pattern>^ IL TUO NOME ^</pattern>
        <template>Mi chiamo Wellky. Il tuo nome è <get name="username"></get>, destra?</template>
    </category>
    
    <category>
        <pattern>SI</pattern>
        <that>^ IL TUO NOME ^</that>
        <template><srai>CIAO <get name="username"></get></srai></template>
    </category>
    
    <category>
        <pattern>NO</pattern>
        <that>^ IL TUO NOME ^</that>
        <template>
            <think><set name='topic'>NOME</set></think>
            Come ti chiami?
        </template>
    </category>
    
    
    <!-- Possible questions to get the name of the user -->
    <topic name='NAME'>
        
        <category>
            <pattern>SONO *</pattern>
            <template>
                <think><set name="username"><star index="1"/></set></think>
                <srai>CIAO <get name="username"></get></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>
        
        <category>
            <pattern>* MIO NOME ES *</pattern>
            <template>
                <srai>SONO <star index="2"/></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>
        
        <category>
            <pattern>* CHIAMO *</pattern>
            <template>
                <srai>SONO <star index="2"/></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>

        <category>
            <pattern>*</pattern>
            <template>
                <srai>SONO <star/></srai>
                <think><set name='topic'></set></think>
            </template>
        </category>
        
    </topic>
    
    
	 <category> 
      <pattern>WELLKY</pattern>
      <template> 
        <random> 
          <li>sì?</li>
          <li>Dimmi</li>
        </random>
      </template>
    </category>
    
    
    
    <!-- Body of conversation -->
    <category> 
      <pattern>* STAI FACENDO ADESSO ^</pattern>
      <template> 
        <random> 
          <li>Sto parlando a voi.</li>
          <li>Divertendosi a parlare con te.</li>
        </random>
      </template>
    </category>
    
    <category> 
      <pattern>* QUALCOSA ^</pattern>
      <template> 
        <random>
            <li> Parlami dei tuoi figli.<srai>^ I MIEI FIGLI ^</srai></li>
            <li> Parlami dei tuoi nipoti.<srai>^ I MIEI NIPOTI ^</srai></li>
            <li> Parlami dei tuoi animali domestici.<srai>^ I MIEI ANIMALI ^</srai></li>
            <li> Parlami dei tuoi amici.<srai>^ MIO AMICO</srai></li>
            <li> Parlami dei tuoi hobby. <srai>^ I MIEI HOBBY</srai></li>
        </random>
      </template>
    </category>
    
    <category> 
      <pattern>* PARLARE ^</pattern>
      <template><srai>* QUALCOSA ^</srai></template>
    </category>
    
    <category>
        <pattern>* NOTICIAS ^</pattern>
        <template>
            Puoi accedere ad alcune notizie qui:
            <random>
                <li><link><text>BBC News</text><url>https://www.bbc.com/news</url></link></li>
                <li><link><text>The Sun</text><url>https://www.thesun.co.uk</url></link></li>
                <li><link><text>Daily Mail</text><url>https://www.dailymail.co.uk/home/index.html</url></link></li>
            </random>
        </template>
    </category>
    
    <category>
        <pattern>* LIBRI</pattern>
        <template>Sì, mi piace leggere.
        <think><set name="topic">LIBRI</set></think>
        </template>
    </category>
    
    <topic name="BOOKS">
        
        <category>
            <pattern>ANCH'IO</pattern>
            <template>Che tipo di libri ti piacciono?</template>
        </category>
        
        <category>
            <pattern>ADORO LEGGERE ^ <set>tipidilibri</set> ^</pattern>
            <template>Sì, i libri ^ <star/> sono i miei preferiti.</template>
        </category>
        
        <category>
            <pattern>ADORO LEGGERE ^ <set>tipidilibri</set> ^</pattern>
            <template>Sì, i libri ^ <star/> sono i miei preferiti.</template>
        </category>
        
        <category>
            <pattern>* STAI LEGGENDO ^</pattern>
            <template>Sto leggendo Harry Potter e la Pietra filosofale, è un po 'vecchio ma lo adoro. E tu?</template>
        </category>
        
        <category>
            <pattern>_ STAI LEGGENDO *</pattern>
            <template><star index="2"/> è anche un buon libro.</template>
        </category>
        
    </topic>
    
    <!-- End of conversation -->
	<category>
    <pattern>ADDIO ^</pattern>
    <template> 
      <random>
        <li>Addio.</li>
        <li>Arrivederci.</li>
		<li>È stato un piacere parlare con te.</li>
      </random>
    </template>
    </category>
  
    <category>
    <pattern>A DOPO ^</pattern>
    <template> <srai>ADDIO ^</srai>
    </template>
    </category>
    
    <category>
    <pattern>* LA CONVERSAZIONE FINISCE</pattern>
    <template> <srai>ADDIO ^</srai>
    </template>
    </category>
    
</aiml>