<!-- Question about children to start children topic -->
    <category>
        <pattern>^ I MIEI FIGLI</pattern>
        <template>
            <think><set name='topic'>CHILDREN</set></think>
            <condition name='nchild'>
               <li value= '0'> Avere bambini? - Indica Sì o No </li>
               <li value= 'unknown'> Avere bambini? - Indica Sì o No </li>
               <li>
                    <random>
                        <li> Come stanno i tuoi figli? </li>
                         <li> Hai visto i tuoi figli questa settimana? </li>
                         <li> Hai qualche piano con i tuoi figli oggi? </li>
                    </random>
                </li>
            </condition>
        </template>
    </category>
    
    <!-- Question about grandchildren to start grandchildren topic -->
    <category>
        <pattern>^ I MIEI NIPOTI</pattern>
        <template>
            <think><set name='topic'>GRANDCHILDREN</set></think>
            <condition name='ngrandchild'>
               <li value='0'> Hai nipoti? - Indica Sì o No </li>
                <li value='unknown'> Hai nipoti?- Indica Sì o No </li>
                <li>
                <random>
                    <li> Come stanno i tuoi nipoti? </li>             
